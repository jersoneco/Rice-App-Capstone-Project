<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maincolor"
    android:orientation="vertical"
    tools:context=".ui.home.fertilizer_calculator.FertilizerCalculatorActivity">

    <RelativeLayout
        android:id="@+id/hideSheet"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:background="@color/white">
        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_marginEnd="10dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/scrollV"
            android:text="Close"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:id="@+id/scrollV"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_firstApplied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tv_secondApplied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/tv_thirdApplied"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layoutfert">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by : SEVN Team"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="8dp"
                android:text="Fertilizer Calculator"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_Hectare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Enter Hectare(ha)"
                android:padding="10dp"
                android:background="@color/white"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_Calculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/side_nav_bar"
                android:text="Enter"
                android:textAlignment="center"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_error_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:text="This fertilizer calculator is calculate the bag of fertilizer by hectare.\n\nDRY SEASON\nNitrogen (N) = 100\nPhosphorus (P) = 50\nPotassium (K) = 30\n\nRAINY SEASON\nNitrogen (N) = 90\nPhosphorus (P) = 60\nPotassium (K) = 30"
                android:textAlignment="center"
                android:textColor="#FF0000"
                android:textStyle="italic" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>