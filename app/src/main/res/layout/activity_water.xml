<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maincolor"
    tools:context=".ui.home.health_guide.variety_document.Water">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:scaleType="fitXY"
                android:src="@drawable/water" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Headline"
                android:paddingStart="15dp"
                android:padding="8dp"
                android:text="PAMAMAHALA NG TUBIG" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:id="@+id/kahalagahan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:text="Kahalagahan"
                    android:fontFamily="@string/font_family_black"/>
                <TextView
                    android:id="@+id/kahalagahandecrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="@string/font_family_medium"
                    android:layout_marginBottom="15dp"
                    android:layout_marginHorizontal="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pagtataya o Assessment"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:fontFamily="@string/font_family_black"
                    android:id="@+id/assessment"
                    android:layout_marginHorizontal="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="@string/font_family_medium"
                    android:id="@+id/assessmentdecrip"
                    android:layout_marginHorizontal="15dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mga rekomendasyon"
                    style="@style/TextAppearance.AppCompat.Body2"
                    android:fontFamily="@string/font_family_black"
                    android:id="@+id/recommendation"
                    android:layout_marginHorizontal="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:fontFamily="@string/font_family_medium"
                    android:id="@+id/recommendationdescrip"
                    android:layout_marginHorizontal="15dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/waterrr"
                    android:layout_marginHorizontal="15dp"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>