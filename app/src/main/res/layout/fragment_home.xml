<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maincolor"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/logo"
                    android:contentDescription="Logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Developed by : SEVN Team"
                    android:textStyle="italic" />

                <LinearLayout
                    android:id="@+id/health_guide_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/whiteee"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/ic_baseline_local_hospital_24"
                        android:contentDescription="guide" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginEnd="87dp"
                        android:background="@drawable/homebutton"
                        android:fontFamily="sans-serif-black"
                        android:padding="15dp"
                        android:text="Rice Production Health Guide"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fertilizer_calculator_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/whiteee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/ic_baseline_calculate_24"
                        android:contentDescription="calculate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_marginEnd="87dp"
                        android:background="@drawable/homebutton"
                        android:fontFamily="sans-serif-black"
                        android:padding="15dp"
                        android:text="Rice Fertilizer Calculator"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/disease_identifier_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:layout_marginBottom="55dp"
                    android:layout_marginTop="55dp"
                    android:background="@drawable/whiteee"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:src="@drawable/ic_baseline_image_search_24"
                        android:contentDescription="image" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/homebutton"
                        android:elevation="5dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Rice Disease Identifier"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:layout_margin="0dp"
                        android:layout_marginEnd="87dp" />

                </LinearLayout>



            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>